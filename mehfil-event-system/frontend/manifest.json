  "screenshots": [
    {
      "src": "/assets/images/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Desktop view of Mehfil events page"
    },
    {
      "src": "/assets/images/screenshot-mobile.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile view of Mehfil events page"
    }
  ],
  "shortcuts": [
    {
      "name": "Browse Events",
      "short_name": "Events",
      "description": "Discover upcoming cultural events",
      "url": "/events.html",
      "icons": [
        {
          "src": "/assets/images/shortcut-events.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "My Dashboard",
      "short_name": "Dashboard",
      "description": "View your bookings and events",
      "url": "/dashboard.html",
      "icons": [
        {
          "src": "/assets/images/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Create Event",
      "short_name": "Create",
      "description": "Organize a new cultural event",
      "url": "/create-event.html",
      "icons": [
        {
          "src": "/assets/images/shortcut-create.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "My Profile",
      "short_name": "Profile",
      "description": "Manage your profile and preferences",
      "url": "/profile.html",
      "icons": [
        {
          "src": "/assets/images/shortcut-profile.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/create-event.html",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+mehfil",
      "url": "/event-details.html?id=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/create-event.html",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".webp", ".gif"],
        "text/calendar": [".ics"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.mehfil.app",
      "id": "com.mehfil.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/mehfil/id123456789",
      "id": "123456789"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate"
}
